@model ApplicationUser;

@{
    ViewData["Title"] = "Edit User";
}

<div class="p-2 sm:p-5 flex items-center justify-center text-lg sm:text-xl">
    <form id="editForm" asp-action="Editer" method="post" class="w-full max-w-lg bg-white p-8 rounded-lg shadow-lg">
        <h2 class="text-center pb-8 text-xl sm:text-4xl font-bold pt-4">Edit User</h2>
        <hr class="mb-6" />
        <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm mb-4" role="alert"></div>
        <div class="grid grid-cols-1 gap-6">
            <input type="hidden" asp-for="Id" />

            <div class="flex flex-col">
                <label asp-for="UserName" class="mb-2">Nom</label>
                <input asp-for="UserName" class="p-2 border border-gray-300 rounded-md" />
                <span asp-validation-for="UserName" class="text-red-500 text-sm"></span>
            </div>
            <div class="flex flex-col">
                <label asp-for="Email" class="mb-2">Email</label>
                <input asp-for="Email" class="p-2 border border-gray-300 rounded-md" />
                <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
            </div>
            <div class="flex flex-col">
                <label asp-for="Sold" class="mb-2">Sold</label>
                <input asp-for="Sold" class="p-2 border border-gray-300 rounded-md" />
                <span asp-validation-for="Sold" class="text-red-500 text-sm"></span>
            </div>
        </div>
        <button type="submit" class="w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mt-6">Confirmer</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
